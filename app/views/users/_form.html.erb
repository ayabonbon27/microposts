<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_user| %>
          <li>
            <%= full_user %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
      
  名前:
  <%= f.text_field :name %>

  eメール:
  <%= f.text_field :email %>
  
  紹介文：
  <%= f.text_area :profile %>
  
  地域
  <%= f.text_area :location %>
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>